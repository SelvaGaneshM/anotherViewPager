<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabbedViewPager">
        <attr name="tabItemsMarginStart" format="dimension" />
        <attr name="tabItemsMarginEnd" format="dimension" />
        <attr name="tabItemsMarginBottom" format="dimension" />
        <attr name="tabItemsMarginTop" format="dimension" />
        <attr name="tabSelectedFont" format="reference"/>
        <attr name="tabDefaultFont" format="reference"/>
        <attr name="tabSelectedTextColor" />
    </declare-styleable>

    <style name="TabbedViewPagerStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabbedViewPagerTabTextStyle</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabIndicatorColor">@color/light_grey</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">@android:color/transparent</item>
    </style>

    <style name="TabbedViewPagerTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">19sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>